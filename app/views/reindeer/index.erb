<div class="container">
    <div class="col s12">
        <h3 class="valign center-align">Enter the info for a Reindeer</h3>
    </div>
</div>
<div class="container z-depth-1">
    <form method="post" action="/reindeer">
        <div class="container">
            <div class="row">
                <div class="col s1">&nbsp;</div>
                <div class="col s10">
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">account_box</i>
                            <input type="text" name="name"/>
                            <label for="name">Name</label>
                        </div>

                        <div class=" input-field col s12">
                            <i class="material-icons prefix">email</i>
                            <input type="text" name="email"/>
                            <label for="email">Email</label>
                        </div>

                        <div class="input-field  col s12">
                            <i class="material-icons prefix">phone</i>
                            <input type="text" name="mobile"/>
                            <label for="mobile">Mobile</label>
                        </div>

                        <div class="col s12 right-align">
                            <button class="green btn waves-effect waves-light " type="submit" name="action">Submit
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col s1">&nbsp;</div>
            </div>
        </div>
    </form>
</div>
<div class="container">
    <div class="col s12">
        <h3 class="valign center-align">Our Reindeers</h3>
    </div>
</div>
<div class="container">
    <table>
        <thead>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile</th>
        </thead>
        <tbody>
            <% @reindeers.each do |reindeer| %>
            <tr>
                <td><%= reindeer.name %></td>
                <td><%= reindeer.email %></td>
                <td><%= reindeer.mobile %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
